<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Add Food"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.daggerexample.framework.CustomButton
        style="@style/PrimaryButtonStyle"
        android:layout_marginBottom="16dp"
        android:id="@+id/btn_primary"
        app:buttonText="Show Country"
        app:buttonTextColor="@color/colorWhite"
        app:layout_constraintBottom_toTopOf="@+id/btn_secondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.example.daggerexample.framework.CustomButton
        style="@style/SecondaryButtonStyle"
        android:layout_marginBottom="16dp"
        android:id="@+id/btn_secondary"
        app:buttonText="Custom Button"
        app:buttonTextColor="@color/colorFacebookBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>